{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@types": ["src/plugin/types"],
      "@helpers/*": ["src/plugin/helpers/*"],
      "@helpers": ["src/plugin/helpers"],
      "@plugin": ["src/plugin"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
